# Environment Configuration Template
# Copy this file to .env.local for local development
# Never commit actual .env files with real secrets!

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# ==============================================
# JWT CONFIGURATION
# ==============================================
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_ISSUER=reussitess-global-nexus
JWT_AUDIENCE=reussitess-users

# ==============================================
# ENCRYPTION CONFIGURATION
# ==============================================
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-encryption-key-64-characters-hex

# ==============================================
# OAUTH PROVIDERS - GOOGLE
# ==============================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/api/auth/callback/google

# ==============================================
# OAUTH PROVIDERS - GITHUB
# ==============================================
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=https://your-domain.com/api/auth/callback/github

# ==============================================
# OAUTH PROVIDERS - FACEBOOK
# ==============================================
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=https://your-domain.com/api/auth/callback/facebook

# ==============================================
# OAUTH PROVIDERS - MICROSOFT
# ==============================================
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=https://your-domain.com/api/auth/callback/microsoft

# ==============================================
# OAUTH PROVIDERS - TWITTER
# ==============================================
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_REDIRECT_URI=https://your-domain.com/api/auth/callback/twitter

# ==============================================
# DATABASE CONFIGURATION (if using)
# ==============================================
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
DATABASE_ENCRYPTION_KEY=your-database-encryption-key

# ==============================================
# REDIS CONFIGURATION (for rate limiting, sessions)
# ==============================================
REDIS_URL=redis://user:password@host:6379
REDIS_TLS_ENABLED=true

# ==============================================
# EMAIL SERVICE (for notifications, 2FA)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@your-domain.com

# ==============================================
# RECAPTCHA (for bot protection)
# ==============================================
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# ==============================================
# CLOUDFLARE TURNSTILE (alternative to reCAPTCHA)
# ==============================================
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# ==============================================
# GOOGLE CLOUD CONFIGURATION
# ==============================================
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ==============================================
# SECRET MANAGER (Google Cloud Secret Manager)
# ==============================================
SECRET_MANAGER_ENABLED=true
SECRET_MANAGER_PROJECT_ID=your-project-id

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ==============================================
# RATE LIMITING CONFIGURATION
# ==============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_STRICT_MAX=10

# ==============================================
# SESSION CONFIGURATION
# ==============================================
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# ==============================================
# CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
CORS_CREDENTIALS=true

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ==============================================
# API KEYS (Third-party services)
# ==============================================
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# ==============================================
# 2FA CONFIGURATION
# ==============================================
TWO_FA_ENABLED=true
TWO_FA_ISSUER=Reussitess Global Nexus
OTP_SECRET_LENGTH=32

# ==============================================
# SECURITY HEADERS
# ==============================================
HSTS_MAX_AGE=63072000
CSP_REPORT_URI=https://your-domain.com/api/csp-report

# ==============================================
# IP BLOCKING (optional)
# ==============================================
BLOCKED_IPS=192.168.1.1,10.0.0.1
ALLOWED_IPS=

# ==============================================
# WEBHOOK SECRETS
# ==============================================
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# ==============================================
# BACKUP & DISASTER RECOVERY
# ==============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
